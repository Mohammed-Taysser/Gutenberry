{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "linebreak-style": ["error", "unix"],
    "quotes": [
      1,
      "single",
      { "avoidEscape": true, "allowTemplateLiterals": true }
    ],
    "semi": ["error", "always"],
    "complexity": [
      "error",
      {
        "max": 5
      }
    ],
    "consistent-return": [
      "error",
      {
        "treatUndefinedAsUnspecified": true
      }
    ],
    "array-callback-return": [
      "error",
      {
        "allowImplicit": true
      }
    ],
    "class-methods-use-this": "error",
    "block-scoped-var": "error",
    // "camelcase": [
    //   "warn",
    //   {
    //     "properties": "never",
    //     "ignoreDestructuring": true,
    //     "ignoreImports": true
    //   }
    // ],
    "max-params": ["error", 3],
    "max-statements": ["error", 10],
    "max-lines-per-function": [
      "error",
      {
        "max": 20,
        "skipBlankLines": true,
        "skipComments": true,
        "IIFEs": true
      }
    ],
    "max-nested-callbacks": ["error", 3],
    "max-depth": ["error", 3],
    "max-lines": [
      "warn",
      {
        "max": 500,
        "skipBlankLines": true,
        "skipComments": true
      }
    ],
    "init-declarations": ["error", "always"],
    "id-denylist": ["warn", "data", "callback"],
    "id-length": [
      "error",
      {
        "min": 3,
        "max": 30,
        "exceptions": ["i"]
      }
    ],
    "max-classes-per-file": ["warn", 5],
    "func-style": [
      "error",
      "declaration",
      {
        "allowArrowFunctions": true
      }
    ],
    "guard-for-in": "error",
    "grouped-accessor-pairs": ["warn", "getBeforeSet"],
    "eqeqeq": ["error", "smart"],
    "default-case-last": "error",
    "default-param-last": ["error"],
    "curly": ["warn", "multi-or-nest"],
    "default-case": "error",
    "no-delete-var": "error",
    "no-caller": "error",
    "no-confusing-arrow": "error",
    "no-console": [
      "error",
      {
        "allow": ["warn", "error"]
      }
    ],
    "dot-notation": ["warn", { "allowKeywords": false }],
    "no-alert": "error",
    "no-array-constructor": "error",
    "no-bitwise": "warn",
    "no-floating-decimal": "error",
    "no-div-regex": "warn",
    "no-extra-label": "error",
    "no-extra-boolean-cast": [
      "error",
      {
        "enforceForLogicalOperands": true
      }
    ],
    "no-eval": "error",
    "no-empty-function": [
      "error",
      {
        "allow": ["functions"]
      }
    ],
    "no-eq-null": "error",
    "no-else-return": [
      "warn",
      {
        "allowElseIf": false
      }
    ],
    "no-empty": "error",
    "no-new-object": "error",
    "no-new-wrappers": "error",
    "no-new": "error",
    "no-magic-numbers": ["warn", { "ignore": [0] }],
    "no-multi-str": "error",
    "no-new-func": "error",
    "no-label-var": "error",
    "no-labels": "error",
    "no-negated-condition": "error",
    "no-nested-ternary": "error",
    "no-mixed-operators": "error",
    "no-implied-eval": "error",
    "no-lone-blocks": "error",
    "no-inline-comments": "warn",
    "no-iterator": "error",
    "no-invalid-this": [
      "error",
      {
        "capIsConstructor": false
      }
    ],
    "no-implicit-globals": "error",
    "no-throw-literal": "error",
    "no-shadow": ["error", { "hoist": "functions" }],
    "no-return-assign": ["error", "always"],
    "no-return-await": "error",
    "no-regex-spaces": "error",
    "no-redeclare": ["error", { "builtinGlobals": true }],
    "no-warning-comments": "error",
    "no-var": "error",
    "no-proto": "error",
    "no-param-reassign": "error",
    "no-script-url": "error",
    "no-sequences": "error",
    "no-void": "error",
    "no-useless-rename": "error",
    "no-useless-return": "error",
    "no-useless-constructor": "error",
    "no-useless-escape": "error",
    "no-useless-computed-key": "error",
    "no-useless-concat": "error",
    "no-useless-call": "error",
    "no-underscore-dangle": "error",
    "no-unused-expressions": "error",
    "no-unneeded-ternary": "error",
    "no-undef-init": "error",
    "vars-on-top": "warn",
    "no-octal-escape": "error",
    "accessor-pairs": "warn",
    "yoda": "error",
    "no-undefined": "error",
    "strict": ["error", "function"],
    "symbol-description": "error",
    "arrow-body-style": ["error", "as-needed"],
    "spaced-comment": "warn",
    "require-unicode-regexp": "error",
    "operator-assignment": "warn",
    "radix": ["error", "as-needed"],
    "require-await": "error",
    "prefer-numeric-literals": "error",
    "prefer-template": "warn",
    "quote-props": ["warn", "as-needed"],
    "prefer-rest-params": "error",
    "prefer-spread": "warn",
    "prefer-arrow-callback": "warn",
    "prefer-promise-reject-errors": "error",
    "prefer-object-spread": "warn",
    "prefer-exponentiation-operator": "error",
    "prefer-named-capture-group": "error",
    "prefer-regex-literals": ["error", { "disallowRedundantWrapping": true }],
    "prefer-const": "error",
    "prefer-destructuring": [
      "error",
      {
        "VariableDeclarator": {
          "array": false,
          "object": true
        },
        "AssignmentExpression": {
          "array": true,
          "object": false
        }
      },
      {
        "enforceForRenamedProperties": false
      }
    ],
    "one-var": ["warn", "consecutive"],
    "jsx-quotes": ["warn", "prefer-single"],
    "key-spacing": [
      "warn",
      { "afterColon": true, "mode": "strict", "align": "value" }
    ],
    "implicit-arrow-linebreak": ["error", "beside"],
    "indent": ["warn", 2, { "ignoredNodes": ["ConditionalExpression"] }],
    "generator-star-spacing": ["error", { "before": true, "after": false }],
    "func-call-spacing": ["error", "never"],
    "eol-last": ["error", "always"],
    "comma-spacing": ["error", { "before": false, "after": true }],
    "comma-style": ["error", "last"],
    "computed-property-spacing": ["error", "never"],
    "block-spacing": ["warn", "always"],
    "brace-style": ["error", "1tbs", { "allowSingleLine": true }],
    "comma-dangle": ["error", "always-multiline"],
    "array-element-newline": [
      "error",
      "consistent",
      { "multiline": true, "minItems": 3 }
    ],
    "arrow-parens": ["warn", "as-needed", { "requireForBlockBody": true }],
    "arrow-spacing": ["error", { "before": true, "after": true }],
    "array-bracket-newline": ["warn", "consistent"],
    "array-bracket-spacing": [
      "warn",
      "never",
      {
        "singleValue": false,
        "objectsInArrays": false,
        "arraysInArrays": false
      }
    ],
    "wrap-regex": "error",
    "yield-star-spacing": ["error", { "before": true, "after": false }],
    "space-unary-ops": [
      2,
      {
        "words": true,
        "nonwords": false,
        "overrides": {
          "new": false,
          "++": true
        }
      }
    ],
    "switch-colon-spacing": ["error", { "after": false, "before": true }],
    "space-in-parens": ["error", "never"],
    "rest-spread-spacing": ["error", "never"],
    "no-multiple-empty-lines": ["error", { "max": 2, "maxEOF": 0 }],
    "no-trailing-spaces": "warn",
    "no-whitespace-before-property": "error",
    "no-multi-spaces": ["warn", { "ignoreEOLComments": true }],
    "multiline-comment-style": ["warn", "starred-block"],
    "max-len": [
      "warn",
      {
        "code": 120,
        "tabWidth": 2,
        "ignoreComments": true,
        "ignoreUrls": true,
        "ignoreStrings": true
      }
    ],
    "max-statements-per-line": ["error", { "max": 1 }],
    "lines-around-comment": ["error", { "beforeLineComment": true }],
    "lines-between-class-members": ["warn", "always"],
    "no-implicit-coercion": "warn",
    "no-template-curly-in-string": "error",
    "new-cap": ["error", { "newIsCap": true }],
    "no-use-before-define": "error",
    "no-constructor-return": "error",
    "no-await-in-loop": "error",
    "new-parens": "error",
    "no-ternary": "warn",
    "object-shorthand": "warn",
    "function-call-argument-newline": ["error", "never"],
    "function-paren-newline": ["error", "multiline"],
    "multiline-ternary": ["error", "always-multiline"],
    "no-extra-parens": [
      "error",
      "all",
      {
        "returnAssign": false,
        "nestedBinaryExpressions": false,
        "ignoreJSX": "multi-line"
      }
    ],
    "object-curly-newline": [
      "error",
      { "multiline": true, "consistent": true }
    ],
    "template-curly-spacing": ["error", "always"],
    "semi-style": ["error", "last"]
  }
}
